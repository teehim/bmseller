<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/seller_bg"
    tools:context="seller.bmwallet.com.bangmodseller.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:id="@+id/store_name"
            android:textColor="@color/white"
            android:text="Store Name"
            android:textSize="50sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/dateTxt"
                android:text="date"
                android:gravity="right"
                android:textSize="30dp"/>
            <DigitalClock
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="right"/>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/to_sell"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:text="Selling"
            android:src="@drawable/sell"
            android:layout_marginRight="20dp"
            android:textSize="50sp"/>
        <ImageView
            android:id="@+id/to_product"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/product"
            android:text="Product"
            android:layout_marginRight="20dp"
            android:textSize="50sp"/>

        <ImageView
            android:id="@+id/to_promo"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:text="Promotion"
            android:src="@drawable/promotion"
            android:layout_marginRight="20dp"
            android:textSize="50sp"/>

        <ImageView
            android:id="@+id/to_report"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:text="Report"
            android:src="@drawable/report"
            android:textSize="50sp"/>
    </LinearLayout>



</LinearLayout>
